#include<stdio.h>
int main(){
	int a[4][4],b[4][4],i,j;
	printf("input 16 number\n");
	for(i=0;i<4;i++)
		for(j=0;j<4;j++)
		{scanf("%d",&a[i][j]);
		 b[3-j][i]=a[i][j];
		}
	printf("array a\n");
	for(i=0;i<4;i++)
	{for(j=0;j<4;j++)
	 printf("%6d",a[i][j]);
	 printf("\n");
	 } 
	printf("array b\n");
	for(i=0;i<4;i++)
	{for(j=0;j<4;j++)
	 printf("%6d",b[i][j]);
	 printf("\n");
	 } 
} 
