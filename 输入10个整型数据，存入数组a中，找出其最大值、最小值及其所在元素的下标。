#include<stdio.h>
int main(){
	int a[10];
	int i,x,y,max,min;
	printf("请输入10个整数：");
	for (i=0;i<10;i++)
	scanf("%d",&a[i]);
	printf("\n");
	max=a[0];
	for(i=0;i<10;i++)
		if (max<a[i])
		{max=a[i];x=i;}
	min=a[0];
	for(i=0;i<10;i++)
		if(min>a[i])
		{min=a[i];y=i;}
	printf("max=%d,下标为%d\n",max,x);
	printf("min=%d,下标为%d\n",min,y);
} 
